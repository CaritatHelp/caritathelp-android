<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/my_organisations_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:focusable="true"
        android:focusableInTouchMode="true"

        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/top_bar_my_organisations_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/top_bar_my_organisations_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/arrow_top_bar"/>

            </LinearLayout>

            <!--SEARCH BAR -->
            <LinearLayout
                android:id="@+id/top_bar_my_organisations_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="5"
                android:orientation="horizontal"

                android:layout_gravity="center"
                android:background="@drawable/border_search_bar">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"

                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_search"/>

                <EditText
                    android:id="@+id/top_bar_my_organisations_search_text"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"

                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="@android:string/search_go"
                    android:textColorHint="@color/bootstrap_gray"
                    android:textColor="@android:color/white"
                    android:imeActionLabel="@android:string/search_go"
                    android:singleLine="true">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/top_bar_my_organisations_btn_add_orga"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/btn_plus" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/orga_list_view"
        android:layout_below="@+id/my_organisations_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>

    <ProgressBar
        android:id="@+id/my_organisations_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone" />

</RelativeLayout>