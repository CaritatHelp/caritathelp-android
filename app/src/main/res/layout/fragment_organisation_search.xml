<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/organisations_search_top_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"

                android:orientation="horizontal"
                android:background="@color/primary">

                <!-- Search bar -->
                <LinearLayout
                    android:id="@+id/organisations_search_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:layout_weight="4"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_gravity="center"
                    android:background="@drawable/border_search_bar"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"

                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_search"/>

                    <EditText
                        android:id="@+id/organisations_search_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"

                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:hint="@string/organisations_search_bar"
                        android:textColorHint="@color/secondary_text"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_14sdp"
                        android:singleLine="true"
                        android:imeActionLabel="@android:string/search_go"
                        android:inputType="text">
                    </EditText>

                </LinearLayout>

                <Button
                    android:id="@+id/organisation_search_btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp"

                    android:background="@android:color/transparent"
                    android:text="Annuler"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/icons"
                    android:textAllCaps="false"
                    android:visibility="gone" />

            </LinearLayout>

            <ListView
                android:id="@+id/organisations_search_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/organisation_search_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone" />

</RelativeLayout>