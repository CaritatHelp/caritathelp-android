<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/organisations_search_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/primary">

        <!-- MailBox BAR -->
        <RelativeLayout
            android:id="@+id/top_bar_organisation_search_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"

            android:layout_gravity="center">

            <TextView
                android:id="@+id/top_bar_organisation_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"

                android:layout_centerInParent="true"
                android:text="@string/organisation_search_title"
                android:textColor="@color/icons"
                android:textSize="@dimen/_20sdp" />

        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/organisations_search_list_view"
        android:layout_below="@+id/organisations_search_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>

    <ProgressBar
        android:id="@+id/organisation_search_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone" />

</RelativeLayout>