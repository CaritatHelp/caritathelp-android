<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/organisations_search_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/primary">

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:layout_gravity="center"
            android:weightSum="6"
            android:background="@drawable/border_search_bar"
            android:visibility="visible">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"

                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_search"/>

            <EditText
                android:id="@+id/organisations_search_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"

                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:hint="@string/organisations_search_bar"
                android:textColorHint="@color/bootstrap_gray"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:imeActionLabel="@android:string/search_go"
                android:inputType="text">
            </EditText>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/organisations_search_list_view"
        android:layout_below="@+id/organisations_search_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>

    <ProgressBar
        android:id="@+id/organisation_search_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone" />

</RelativeLayout>