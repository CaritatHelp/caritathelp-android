<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@color/primary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_mainview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/toolbar_app_logo"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_4sdp"

                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/toolbar_btn_return"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_4sdp"

                android:layout_gravity="center"
                android:src="@drawable/arrow_top_bar"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="@dimen/_4sdp"

                android:layout_gravity="center"
                android:gravity="center|left"
                android:textSize="@dimen/_20sdp"
                android:textColor="@android:color/white"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/toolbar_btn_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"

                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_search"
                android:background="@android:color/transparent"
                android:visibility="visible"/>

            <!--<ImageView-->
                <!--android:id="@+id/toolbar_btn_mailbox"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_marginTop="@dimen/_10sdp"-->
                <!--android:layout_marginBottom="@dimen/_10sdp"-->
                <!--android:layout_marginRight="@dimen/_10sdp"-->

                <!--android:layout_gravity="center"-->
                <!--android:src="@android:drawable/sym_action_chat"/>-->

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>
