<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Image + Event Btn for management -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:padding="@dimen/_4sdp"

                    android:scaleType="centerInside"
                    android:src="@drawable/logo_caritathelp_2017_x2_tisser"/>

                <ImageButton
                    android:id="@+id/btn_management"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"

                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"

                    android:layout_alignParentBottom="true"
                    android:gravity="center|left"

                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- DIVIDER -->
            <View style="@style/Divider" />

            <!-- BAR 2 - MENU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"

                android:orientation="horizontal"
                android:background="@color/icons"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_join"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Rejoindre"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/btn_members"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/organisation_event_members"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/btn_informations"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/organisation_event_informations"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- NEWS -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone" />

</RelativeLayout>