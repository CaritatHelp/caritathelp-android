<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:contentPadding="@dimen/_10sdp"

        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/news_list_top_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons">

                <ImageView
                    android:id="@+id/news_image"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/logo_caritathelp_2017_picture_only" />

                <LinearLayout
                    android:layout_toRightOf="@id/news_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/news_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_10sdp"

                        android:text="Auteur - Type actu"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/news_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_10sdp"

                        android:text="Date"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </RelativeLayout>

            <!--DESCRIPTION Starts -->
            <TextView
                android:id="@+id/news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"

                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:text="Description"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_15sdp"

                android:background="@color/icons" />
            <!--DESCRIPTION Ends -->

        </LinearLayout>

    </android.support.v7.widget.CardView>


