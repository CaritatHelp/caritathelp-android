    <android.support.v7.widget.CardView
        android:id="@+id/btn_birthday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingTop="@dimen/_10sdp"
        card_view:contentPaddingBottom="@dimen/_10sdp"
        card_view:contentPaddingLeft="@dimen/_40sdp"
        card_view:contentPaddingRight="@dimen/_40sdp">

        <TextView
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:paddingLeft="@dimen/_20sdp"

            android:layout_gravity="center"
            android:gravity="left|center"
            android:hint="@string/sign_up_birthday"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14sdp"
            android:background="@android:color/transparent"
            android:singleLine="true" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/btn_gender_male"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_5sdp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="@dimen/_2sdp"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_gender_male"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"

                    android:layout_gravity="center"
                    android:src="@drawable/male"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_gender_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/sign_up_man"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/primary_text"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_gender_female"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_50sdp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="@dimen/_2sdp"
            android:layout_alignParentRight="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_gender_female"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"

                    android:layout_gravity="center"
                    android:src="@drawable/female"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_gender_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/sign_up_woman"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/primary_text"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:background="@color/primary"
        android:text="@string/sign_up_btn_next"
        android:textColor="@color/icons"
        android:textSize="@dimen/_18sdp"
        android:textAllCaps="false"/>

</LinearLayout>