<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingTop="@dimen/_10sdp"
        card_view:contentPaddingBottom="@dimen/_10sdp"
        card_view:contentPaddingLeft="@dimen/_40sdp"
        card_view:contentPaddingRight="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/icons">

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="@dimen/_20sdp"

                android:hint="@string/sign_up_firstname"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_14sdp"
                android:background="@android:color/transparent"
                android:singleLine="true" />

            <!-- DIVIDER -->
            <View
                style="@style/Divider"
                android:layout_margin="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="@dimen/_20sdp"

                android:hint="@string/sign_up_lastname"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_14sdp"
                android:background="@android:color/transparent"
                android:singleLine="true" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

