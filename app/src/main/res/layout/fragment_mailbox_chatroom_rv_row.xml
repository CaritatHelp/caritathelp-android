<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/name_left"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"

        android:layout_alignParentTop="true"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/message_left"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_below="@+id/name_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:maxEms="12"

        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:background="@drawable/background_chat_left"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:maxEms="12"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@drawable/background_chat_right"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/name_right"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_below="@id/message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:maxLines="1"/>

</RelativeLayout>