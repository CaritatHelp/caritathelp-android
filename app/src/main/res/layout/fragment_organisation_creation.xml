<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/organisation_creation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:focusable="true"
        android:focusableInTouchMode="true"

        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/top_bar_organisation_creation_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/top_bar_organisation_creation_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/arrow_top_bar"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="6"

                android:gravity="center"
                android:text="@string/organisation_creation_bar_title"
                android:textColor="@color/icons"
                android:textSize="@dimen/_22sdp" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/organisation_creation_scroll_view"
        android:layout_below="@+id/organisation_creation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bootstrap_gray_lighter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <EditText
                android:id="@+id/organisation_creation_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_1sdp"
                android:paddingLeft="@dimen/_20sdp"

                android:background="@drawable/border_normal_grey"
                android:hint="Nom de l'association"
                android:textSize="@dimen/_18sdp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/organisation_creation_theme"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:layout_height="@dimen/_40sdp"
                android:paddingLeft="@dimen/_20sdp"

                android:background="@drawable/border_normal_grey"
                android:hint="Thème (mot clés)"
                android:textSize="@dimen/_18sdp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/organisation_creation_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_1sdp"
                android:paddingLeft="@dimen/_20sdp"

                android:background="@drawable/border_normal_grey"
                android:hint="Ville"
                android:textSize="@dimen/_18sdp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/organisation_creation_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_20sdp"

                android:background="@drawable/border_normal_grey"
                android:gravity="top|left"
                android:hint="Description"
                android:textSize="@dimen/_18sdp" />

            <Button
                android:id="@+id/organisation_creation_btn_create"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:text="Créer"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/primary_text"
                android:textAllCaps="false" />


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/organisation_creation_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone" />

</RelativeLayout>