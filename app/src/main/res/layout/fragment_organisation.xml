<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:focusable="true"
        android:focusableInTouchMode="true"

        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/top_bar_organisation_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/top_bar_organisation_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/arrow_top_bar"/>

            </LinearLayout>

            <!--SEARCH BAR -->
            <LinearLayout
                android:id="@+id/top_bar_organisation_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="5"
                android:orientation="horizontal"

                android:layout_gravity="center"
                android:background="@drawable/border_search_bar">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"

                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_search"/>

                <EditText
                    android:id="@+id/top_bar_organisation_search_text"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"

                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="@android:string/search_go"
                    android:textColorHint="@color/bootstrap_gray"
                    android:textColor="@android:color/white">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_bar_organisation_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@android:drawable/ic_menu_preferences" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BAR 1 - Presentation orga -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp">

                <ImageView
                    android:id="@+id/organisation_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_4sdp"

                    android:scaleType="centerInside"
                    android:src="@drawable/logo_caritathelp_2017_x2_tisser"/>

                <TextView
                    android:id="@+id/organisation_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"

                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"

                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <!--<TextView-->
                    <!--android:id="@+id/organisation_name"-->
                    <!--android:layout_above="@+id/organisation_members_number"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/_20sdp"-->

                    <!--android:text="Caritathelp"-->
                    <!--android:textSize="@dimen/_30sdp"-->
                    <!--android:textStyle="bold" />-->

                <!--<TextView-->
                    <!--android:id="@+id/organisation_members_number"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="@dimen/_10sdp"-->
                    <!--android:layout_marginLeft="@dimen/_20sdp"-->

                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:text="6 membres"-->
                    <!--android:textSize="@dimen/_20sdp" />-->


            </RelativeLayout>

            <!-- DIVIDER -->
            <View style="@style/Divider" />

            <!-- BAR 2 - MENU -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:background="@color/icons">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/organisation_btn_members"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/organisation_members"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/organisation_btn_events"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/organisation_events"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/organisation_btn_informations"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/organisation_informations"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <!-- DIVIDER -->
            <View
                android:id="@+id/news_second_divider"
                style="@style/Divider" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:background="@color/divider" />

            <!-- NEWS -->
            <ListView
                android:id="@+id/organisation_list_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </ListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>