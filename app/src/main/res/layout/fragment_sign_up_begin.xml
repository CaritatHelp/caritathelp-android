<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingTop="@dimen/_10sdp"
        card_view:contentPaddingBottom="@dimen/_10sdp"
        card_view:contentPaddingLeft="@dimen/_40sdp"
        card_view:contentPaddingRight="@dimen/_40sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="En vous inscrivant, vous acceptez nos Conditions d'utilisation."
            android:textSize="14sp"
            android:textColor="@color/primary_text" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingTop="@dimen/_10sdp"
        card_view:contentPaddingBottom="@dimen/_10sdp"
        card_view:contentPaddingLeft="@dimen/_40sdp"
        card_view:contentPaddingRight="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch_geolocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/sign_up_geolocation"
                android:textSize="14sp"
                android:textColor="@color/primary_text"
                android:textOn="Oui"
                android:textOff="Non"
                android:background="@android:color/transparent" />

            <!-- DIVIDER -->
            <View
                style="@style/Divider"
                android:layout_margin="@dimen/_10sdp"/>

            <Switch
                android:id="@+id/switch_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/sign_up_notifications"
                android:textSize="14sp"
                android:textColor="@color/primary_text"
                android:textOn="Oui"
                android:textOff="Non"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:background="@color/primary"
        android:text="@string/sign_up_btn_next"
        android:textColor="@color/icons"
        android:textSize="15sp"
        android:textAllCaps="false"/>

</LinearLayout>