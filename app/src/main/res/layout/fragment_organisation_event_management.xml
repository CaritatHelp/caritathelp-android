<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_modify_event"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="Modifier l'événement"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:background="@color/icons"/>

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/btn_manage_invitations"
            android:layout_width="383dp"
            android:layout_height="48dp"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/organisation_management_members"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:background="@color/icons"/>

        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/transparent" />
        <View style="@style/Divider" />

        <TextView
            android:id="@+id/btn_delete_event"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:gravity="center"
            android:background="@color/icons"
            android:text="Supprimer l'événement"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark" />

        <!-- DIVIDER -->
        <View style="@style/Divider" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/transparent" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>